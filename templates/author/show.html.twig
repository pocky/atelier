{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>
                    {{ author.id }}
                </td>

                <td>
                    {{ author.name }}
                </td>

                <td>
                    {{ author.slug }}
                </td>
            </tr>
        </tbody>
    </table>

    {% set hide_edit, hide_delete = false, false %}
    {{ include('author/others/record_actions.html.twig') }}
{% endblock %}
